            android:id="@+id/tv_line07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ddd02"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/top_id03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/id_text03"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_line07" />

        <TextView
            android:id="@+id/tv_line08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_id03" />

        <ImageView
            android:id="@+id/iv_03"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user3_post2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_id03" />

        <TextView
            android:id="@+id/tv_line09"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/line_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_03" />

        <TextView
            android:id="@+id/under_id03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/id_text03"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_line09" />

        <TextView
            android:id="@+id/long_text03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="@string/long_text03"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/under_id03" />

        <TextView
            android:id="@+id/ddd03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="더보기"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/long_text03" />

        <!--4 번째-->
        <TextView
            android:id="@+id/tv_line10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ddd03"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/top_id04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/id_text04"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_line10" />

        <TextView
            android:id="@+id/tv_line11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_id04" />

        <ImageView
            android:id="@+id/iv_04"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/art3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_id04" />

        <TextView
            android:id="@+id/tv_line12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
